---
layout: default
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="https://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <description>{{ site.description }}</description>
    <link>{{ siteurl.url }}</link>
    <atom:link href="{{ siteurl.url }}/feed.xml" rel="self" type="application/rss+xml" />
    {% for post in site.posts limit:13%}
      <item>
        <title>{{ post.title }}</title>
        <category>{{ post.category }}</category>
        <description>{{ post.content | strip_html | strip_newlines | truncate: 100 }}</description>
        <pubDate>{{ post.date | date: "%F %H:%M:%S " }}</pubDate>
        <link>{{ siteurl.url }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ siteurl.url }}{{ post.url }}</guid>
      </item>
    {% endfor %}
  </channel>
</rss>
